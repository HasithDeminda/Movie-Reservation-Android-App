<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.blueskycinema">
    <!-- External Storage Permission -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BlueSkyCinema">

        <activity android:name=".Zaid.changeDate" />
        <activity android:name=".Zaid.EditReservation" />
        <activity android:name=".Zaid.Confirmation" />
        <activity android:name=".Zaid.Summery" />
        <activity android:name=".Zaid.Tickets" />
        <activity android:name=".Zaid.ReserveNowActivity" />


        <activity android:name=".Hasith.UserHome"></activity>
        <activity android:name=".Hasith.MovieDetails"></activity>
        <activity android:name=".Hasith.add_movies" />
        <activity android:name=".Hasith.add_movies_2" />
        <activity android:name=".Hasith.displayMovies" />
        <activity android:name=".Hasith.startup" />
        <activity android:name=".Hasith.EditMovie" />
        <activity android:name=".Hasith.UserRegistration" />
        <activity android:name=".Hasith.Login" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>